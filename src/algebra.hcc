inline
ExtendedRational &
ExtendedRational::
operator/= (const ExtendedRational & other)
{
	return (* this) *= other.inv();
}

inline
ExtendedRational
operator+ (const ExtendedRational & a, const ExtendedRational & b)
{
	ExtendedRational result = a;
	result += b;
	return result;
}

inline
ExtendedRational
operator- (const ExtendedRational & a, const ExtendedRational & b)
{
	ExtendedRational result = a;
	result -= b;
	return result;
}

inline
ExtendedRational
operator* (const ExtendedRational & a, const ExtendedRational & b)
{
	ExtendedRational result = a;
	result *= b;
	return result;
}

inline
ExtendedRational
operator/ (const ExtendedRational & a, const ExtendedRational & b)
{
	ExtendedRational result = a;
